<%= form_for box do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :year %>
  <%= f.select(:year, 2000..2020) %><br>

  <%= f.label :month %>
  <!-- I18n = internationalization -->
  <%= f.select(:month, I18n.t("date.month_names")[1..-1] )%><br><br>

  <%= f.label "[Select items]"%><br>
  <%= f.collection_check_boxes :item_ids, Item.all, :id, :title %><br>
  <%= f.fields_for :items, box.items.build do |items_fields| %>
    <%= items_fields.text_field :title, placeholder: "title" %><br>
    <%= items_fields.text_area :description, placeholder: "description" %>
  <% end %><br>
  <%= f.submit %>

<% end %>
