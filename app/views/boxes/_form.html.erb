<%= form_for([@plan, @box]) do |f| %>
  <%= render "shared/error_messages", object: @box %>

  <% unless params[:plan_id].present? %>
    <%= f.label "Select a Plan" %>
    <%= f.collection_select(:plan_id, Plan.all, :id, :name)%><br>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label "Month and year" %>
  <%= f.date_select :month_year, { discard_day: :true, } %><br><br>

  <strong><%= f.label "Select items(Up to three items)"%></strong><br>
  <%= f.collection_check_boxes :item_ids, Item.all, :id, :item_name %><br><br>

  <%= f.submit %>
<% end %>
