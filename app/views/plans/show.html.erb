<h1 class="planName"><%= @plan.name %></h1>
<a href="#" class="js-next" data-id="<%=@plan.id%>">Next...</a>

<h3 class="planPrice"><%= @plan.price %></h3>

<p class="planDescription"><%= @plan.description %></p>

<h4><%= link_to "View previous meowboxes", plan_boxes_path(@plan) %></h4>

<% if current_user && current_user.plan == nil %>
  <h4><%= link_to "Buy now", new_user_subscription_path(current_user) %></h4>
<% end %>

<script type="text/javascript" charset="utf-8">
$(function () {
  $(".js-next").on("click", function() {
    var nextId = parseInt($(".js-next").attr("data-id")) + 1;
    $.get("/plans/" + nextId + ".json", function(data) {
      var plan = data["plan"];
      $(".planName").text(plan["name"]);
      $(".planPrice").text(plan["price"]);
      $(".planDescription").text(plan["description"]);
      // re-set the id to current on the link
      $(".js-next").attr("data-id", plan["id"]);
    });
  });
});
</script>
